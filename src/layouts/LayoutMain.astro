---
import "/src/styles/styles.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Setup -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Optimization -->
    <link rel="preload" href="/assets/fonts/Montserrat-VariableFont_wght.woff2" as="font" type="font/woff2" crossorigin />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- SEO -->
    <link rel="canonical" href="https://web-dev-agency.pages.dev/" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="description" content="Web platform represents my version of the Kanban board for Agile project management, which was my dissertation at the computer science master's degree completed this year." />
    <meta name="application-name" content="Web Dev Agency" />
    <meta property="og:title" content="Web Dev Agency" />
    <meta property="og:description" content="Web platform represents my version of the Kanban board for Agile project management, which was my dissertation at the computer science master's degree completed this year." />
    <meta property="og:site_name" content="Web Dev Agency" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ro_RO" />
    <meta property="og:url" content="https://web-dev-agency.pages.dev/" />
    <meta property="og:image" name="image" content="../../og-image.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Web platform represents my version of the Kanban board for Agile project management." />
    <meta property="article:publisher" content="web-dev-agency.pages.dev" />
    <meta property="og:publish_date" content="2024-03-09T23:27:55+03:00" />
		<meta property="article:section" content="Web Dev Agency" />
		<meta property="article:published_time" content="2024-03-09T23:27:55+03:00" />
		<meta property="article:modified_time" content="2024-03-23T23:27:57+03:00" />
    <meta property="og:email" content="office@webdevagency.com" />
    <meta property="og:author" name="author" content="Ionuț Alexandru Poșircă" />
    <meta property="og:phone_number" content="0755054654" />

    <!-- Design -->
    <link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon.svg" />
    <link rel="author" href="https://web-dev-agency.pages.dev/humans.txt" />
    <meta name="generator" content={Astro.generator} />

    <!-- Optimize -->
		<script type="module">
			document.documentElement.classList.remove('no-js');
			document.documentElement.classList.add('js');
		</script>
  </head>
  <body>
    <Header/>
    <main id="mainContent" class="content">
      <slot />
      <script>
        import "../js/script.js";
        </script>
    </main>
    <Footer/>
  </body>
</html>
