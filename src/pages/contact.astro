---
import LayoutMain from "../layouts/LayoutMain.astro";
import ModuleTop from "../components/ModuleTop.astro";
import ModuleCMN from "../components/ModuleCMN.astro";
import TitleCMN from "../components/TitleCMN.astro";
import { Image } from "astro:assets";
import location from "../img/location.svg";
import phone from "../img/phone.svg";
import email from "../img/email.svg";
---

<LayoutMain title="Contact | Web Dev">
  <div>
    <ModuleTop title="Contact">
      <p>You can contact us here!</p>
    </ModuleTop>
    <ModuleCMN content="">
      <div class="contact-column">
        <TitleCMN title="Address" />
        <ul>
          <li>
            <Image
              src={location}
              alt="location"
              width="32"
              height="32"
              loading="eager"
            />
            <a href="#location" target="_blank">Location Web Dev Agency</a>
          </li>
        </ul>
      </div>
      <div class="md:hidden">
        <iframe
          class="map mt-5"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d54231.05940215219!2d26.070785115263586!3d44.409178405145894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b1ff160d3ea77f%3A0x2ded0f191b8d303!2zUGlhyJthIFVuaXJpaSwgQnVjdXJlyJl0aQ!5e0!3m2!1sro!2sro!4v1711142448991!5m2!1sro!2sro"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="contact-column">
        <TitleCMN title="Contact" />
        <ul>
          <li>
            <Image
              src={phone}
              alt="phone"
              width="32"
              height="32"
              loading="eager"
            />
            <a href="tel:0755054654" target="_blank">0755054654</a>
          </li>
          <li>
            <Image
              src={email}
              alt="email"
              width="32"
              height="32"
              loading="eager"
            />
            <a href="mailto:office@webdevagency.com">office@webdevagency.com</a>
          </li>
        </ul>
      </div>
    </ModuleCMN>
    <div>
      <iframe
        class="hidden md:block map mt-5"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d54231.05940215219!2d26.070785115263586!3d44.409178405145894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b1ff160d3ea77f%3A0x2ded0f191b8d303!2zUGlhyJthIFVuaXJpaSwgQnVjdXJlyJl0aQ!5e0!3m2!1sro!2sro!4v1711142448991!5m2!1sro!2sro"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div></LayoutMain
>
