---
import { Image } from "astro:assets";
import location from "../img/location.svg";
import phone from "../img/phone.svg";
import Nav from "../components/Nav.astro";
---

<header class="fixed z-[1000] w-screen bg-gray-500" id="header">
    <div class="flex justify-center items-center content py-3">
    <div class="size-full flex justify-end items-center relative">
        <div class="nav-content brand absolute left-0">
            <a href="/">LOGO</a>
        </div>
        <div class="nav-content justify-center md:flex hidden flex-wrap">
            <div class="flex items-center justify-between w-full lg:w-auto px-0">
                <Nav/>
            </div>
            <div class="hidden lg:flex items-center text-xs text-gray-200 justify-center">
                <div class="flex gap-1">
                    <ul class="flex gap-5">
                        <li>
                            <Image src={location} alt="location" width="28" loading="eager"></Image>
                            <a href="#location" target="_blank"> Location Agency </a>
                        </li>
                        <li>
                            <Image src={phone} alt="phone" width="28" loading="eager"></Image>
                          <a href="tel:0755054654" target="_blank">0755054654</a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</header>